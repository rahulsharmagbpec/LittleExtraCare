<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="5dp"
            android:id="@+id/profile_image2"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/wallpaper"
            app:border_width="2dp"
            app:border_color="@color/myBlue"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/profile_image2"
            android:layout_alignTop="@+id/profile_image2"
            android:layout_alignBottom="@+id/profile_image2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Margaret White"
                android:textColor="@color/myBlue"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="08:00 - 12:00"
                android:textColor="@color/material_blue_grey_800"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/textView13" />

        </LinearLayout>



    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/myBlue"/>
</LinearLayout>